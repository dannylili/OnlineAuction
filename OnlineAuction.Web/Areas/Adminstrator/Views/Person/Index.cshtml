@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="../../../../Scripts/JqGriTthemes/coffee/grid.css" media="screen" title="coffee"
    rel="stylesheet" type="text/css" />
@* 加入layout中的各种css和js文件*@
<link href="@Url.Content("~/Content/Gray/Base.css")" type="text/css" media="all" rel="Stylesheet" />
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
<script src="../../../../Scripts/JqGrid/jquery.jqGrid.min.js" type="text/javascript"></script>
<script src="../../../../Scripts/JqGrid/src/jqModal.js" type="text/javascript"></script>
<script src="../../../../Scripts/JqGrid/src/jqDnR.js" type="text/javascript"></script>
<script type="text/javascript">

    jQuery(document).ready(function () {
        jQuery("#list").jqGrid({
            // jqgrid要求的数据位json：格式参考 http://blog.csdn.net/longtenggdf/article/details/4656798 {"total":1,"page":1,"records":10,"rows":[{"id":1,"cell":["字段1","字段2",.....]},{[id":2,"cell":["字段1","字段2",.....]}]}
            url: '/Person/GridData/',
            datatype: 'json',
            mtype: 'GET',
            colNames: ["ID", "Name", "Age", "Sex", "Nickname"],
            // colNames: ['Id', 'Votes', 'Title'], /* dataFiled(字段名称) */ 
            colModel: [
            { name: 'ID', index: 'ID', width: 40, align: 'left' },
            { name: 'Name', index: 'Name', width: 40, align: 'left' },
            { name: 'Age', index: 'Age', width: 200, align: 'left' },
            { name: "Sex", index: 'Sex', width: 200, align: 'left' },
            { name: 'Nickname', index: 'Nickname', width: 200, align: 'left'}],
            pager: jQuery('#pager'),
            rowNum: 10,
            rowList: [5, 10, 20, 50],
            sortname: 'Id',
            sortorder: "desc",
            viewrecords: true,
            imgpath: '/scripts/JqGriTthemes/coffee/images',
            caption: 'My first grid'
        });
    }); 
</script>
<h2>
    Index</h2>
<table id="list" class="scroll" cellpadding="0" cellspacing="0">
</table>
<div id="pager" class="scroll" style="text-align: center;">
</div>
