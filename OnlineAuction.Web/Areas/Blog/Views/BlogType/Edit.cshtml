<script type="text/javascript">

    // 测试异步操作时，控制页面的laod.png图片显示
    function Edit() {
        alert("ajax request start");
        // $("#ajaxPanel").css("display", "block");
        $.ajax({
            type: "POST",
            url: '/Blog/BlogType/AjaxTest',
            data: "testID=62",
            beforeSend: function () {
                alert("beforeSend");
                $("#ajaxPanel").show();
            },
            complete: function () {
                alert("complete");
                $("#ajaxPanel").hide();
            },
            error: function () {
                alert("error" + window.error);
            },
            success: function (data) {
                alert("exec success and return data is:" + data);
                $("#ajaxPanel").css("display", "none");
                // $(this).addClass("done");
            }
        });
    }

</script>
