<div style="width: 100%;">
    <fieldset>
        <legend>Login Form</legend>
        <input type="hidden" name="action" value="login">
        <label for="login_username">
            Username</label>
        <input type="text" name="login_username" id="login_username" placeholder="Please enter your username"
            style="-webkit-border-radius: 5px; -moz-box-shadow: inset 0 1px 2px rgba(0,0,0,0.25),0 1px 0 #fff;"
            tabindex="0" autofocus="">
        <label for="login_password">
            Password</label>
        <input type="password" name="login_password" id="login_password" placeholder="Please enter your password">
        <button class="mid-button" type="submit" value="Login">
            Sign In</button>
        <div class="remember">
            <input type="checkbox" name="remember_me" id="remember_me" checked="" style="-moz-box-shadow: inset 0 1px 2px rgba(0,0,0,0.25),0 1px 0 #fff;
                -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.25),0 1px 0 white; -o-box-shadow: inset 0 1px 2px rgba(0,0,0,0.25),0 1px 0 #fff;
                box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.25),0 1px 0 white; background-image: -webkit-gradient(linear, 50% 0%, 50% 100%, color-stop(0%, #F7F7F7), color-stop(100%, white));
                background-image: -webkit-linear-gradient(#F7F7F7,white); background-image: -moz-linear-gradient(#F7F7F7,white);
                background-image: -o-linear-gradient(#F7F7F7,white); background-image: -ms-linear-gradient(#F7F7F7,white);
                background-image: linear-gradient(#F7F7F7,white); cursor: text; border: 1px solid #777;
                font: inherit; height: 20px; line-height: normal; padding: 5px; width: 250px;
                -moz-border-radius: 5px; -webkit-border-radius: 5px; -o-border-radius: 5px; -ms-border-radius: 5px;
                -khtml-border-radius: 5px; border-radius: 5px;">
            <label for="remember_me">
                Remember me</label>
        </div>
        <div class="options">
            <a href="/lost_password/retrieve">Forgot Your Password?</a> / <a href="/main/about_cookies">
                Sign In Help</a>
        </div>
    </fieldset>
</div>
