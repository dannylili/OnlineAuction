<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Widget/style/Base.css")"  rel="stylesheet" type="text/css" media="all" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="TContainerContent" class="Background Rounded">
        <img alt="Promys" />
        style="display: block; height: 42px; width: 144px; margin: 10px 0 0 10px;">
        <div style="display: block; margin: 30px; text-align: center; width: 75%">
        </div>
        <div style="float: left; border-right: solid 1px #d4d4d2; height: 55%; padding: 20px;
            width: 50%;">
            Welcome to Promys, to continue please enter your credentials into the logon form
            to the right.</div>
        <div style="float: left; height: 55%; padding: 15px 20px 15px 20px; width: 30%;">
            <img src="//PromysStatic:801/Content/Images/Header/HeaderLogon.png" style="margin-bottom: 15px;">
            <form action="/Promys7/Account/LogOn?ReturnUrl=%2Fpromys7" method="post">
            <fieldset style="background: none; border-width: 0px; margin: 0px; padding: 0px;">
                <label for="Username">
                    Username:</label>
                <input id="Username" maxlength="50" name="Username" style="width: 90%; margin: 0 0 10px 0;"
                    type="text" value="admin"><br>
                <label for="Password">
                    Password:</label>
                <input id="Password" maxlength="50" name="Password" style="width: 90%;" type="password"
                    value="password"><br>
            </fieldset>
            <br style="clear: both;">
            <input id="LogonButton" style="height: 25px; width: 100px; margin: 5px 0 0 0;" value="Logon"
                type="submit" class="ui-button ui-widget ui-state-default ui-corner-all" role="button"
                aria-disabled="false">
            <br>
            <br>
            <p>
                <a href="#">Forgot your password?</a></p>
            </form>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
